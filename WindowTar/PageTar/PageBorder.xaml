<Page x:Class="BarTargu.WindowTar.PageTar.PageBorder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BarTargu.WindowTar.PageTar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageBorder">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Image/Rectangle.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Image Source="/Image/StartText.png" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"/>
        <Image Source="/Image/TartugasText.png" Grid.Column="1" Grid.Row="0" />
        <Button Grid.ColumnSpan="4" Grid.RowSpan="4"
            x:Name="NavigatTable" 
            
            Click="NavigatTable_Click" Opacity="0"
            >
        </Button>
    </Grid>
</Page>
